extends ../layout

block content

  section.content
    header
      h1 Sign up
      p Find exciting companies in 3 quick steps
    ul.steps(data-steps-count='3')
      li.past(data-step='1') Basic information
      li.past(data-step='2') Investment criteria
      li.active(data-step='3') Preferences

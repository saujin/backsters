      .form-solo.pull-left
        fieldset
          legend Preferred industries *
          //
            .field
              input(type='checkbox',name='preferredIndustries[]',value='industry 1',required='required')
              span.fake-input
              label radio off
            .field
              input(type='checkbox',name='preferredIndustries[]',value='industry 2',required='required')
              span.fake-input
